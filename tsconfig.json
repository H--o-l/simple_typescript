// tsconfig.json

{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "strict": true,
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "exclude" : [
    "./build",
    "./node_modules"
  ]
}
